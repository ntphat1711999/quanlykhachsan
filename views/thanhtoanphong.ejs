<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="/assets/vendor/bootstrap/css/bootstrap.min.css"
    />
    <link href="/assets/vendor/fonts/circular-std/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/libs/css/style.css" />
    <link
      rel="stylesheet"
      href="/assets/vendor/fonts/fontawesome/css/fontawesome-all.css"
    />
    <link
      rel="stylesheet"
      href="/assets/vendor/fonts/material-design-iconic-font/css/materialdesignicons.min.css"
    />
    <link rel="stylesheet" href="/assets/vendor/charts/c3charts/c3.css" />
    <link
      rel="stylesheet"
      href="/assets/vendor/fonts/flag-icon-css/flag-icon.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,400;1,100&display=swap"
      rel="stylesheet"
    />
    <title>Quản lý khách sạn</title>
  </head>

  <body>
    <!-- ============================================================== -->
    <!-- main wrapper -->
    <!-- ============================================================== -->
    <div class="dashboard-main-wrapper">
      <!-- ============================================================== -->
      <!-- navbar -->
      <!-- ============================================================== -->
      <%- include('partials/header') %>
      <!-- ============================================================== -->
      <!-- end navbar -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- left sidebar -->
      <!-- ============================================================== -->
      <%- include('partials/sidebar') %>
      <!-- ============================================================== -->
      <!-- end left sidebar -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- wrapper  -->
      <!-- ============================================================== -->
      <div class="dashboard-wrapper">
        <div class="dashboard-ecommerce">
          <div class="container-fluid dashboard-content">
            <!-- ============================================================== -->
            <!-- pageheader  -->
            <!-- ============================================================== -->
            <div class="row">
              <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                  <h2 class="pageheader-title">
                    Tạo hoá đơn thanh toán tiền phòng
                  </h2>
                  <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                      <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                          <a href="/" class="breadcrumb-link">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-item">
                          <a href="/traphong" class="breadcrumb-link"
                            >Trả phòng</a
                          >
                        </li>
                        <li class="breadcrumb-item active">
                          Tạo hoá đơn thanh toán tiền phòng
                        </li>
                      </ol>
                    </nav>
                  </div>
                </div>
              </div>
            </div>
            <!-- ============================================================== -->
            <!-- end pageheader  -->
            <!-- ============================================================== -->
            <div class="ecommerce-widget">
              <div>
                <form class="row" method="POST">
                  <div class="form-group col-6">
                    <label for="name">Tên khách hàng</label>
                    <input
                      type="text"
                      class="form-control"
                      id="name"
                      readonly
                      value="<%= roombill.ten %>"
                    />
                  </div>
                  <div class="form-group col-6">
                    <label for="room">Phòng</label>
                    <input
                      type="text"
                      class="form-control"
                      id="room"
                      readonly
                      value="<%= roombill.phong_thue.ten_phong%>"
                    />
                  </div>
                  <div class="form-group col-12">
                    <table class="table table-order-food">
                      <thead class="thead-dark">
                        <tr>
                          <th scope="col">Loại phòng</th>
                          <th scope="col">Số ngày thuê</th>
                          <th scope="col">Đơn giá</th>
                          <th scope="col">Tổng tiền</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td><%= roombill.phong_thue.loai.ten %></td>
                          <td><%= roombill.songaythue %></td>
                          <td><%= roombill.phong_thue.loai.don_gia %></td>
                          <td><%= roombill.tongtien %></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                  <button type="submit" class="btn btn-outline-success col-12">
                    Lưu lại
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <%- include('partials/footer') %>
        <!-- ============================================================== -->
        <!-- end footer -->
        <!-- ============================================================== -->
      </div>
      <!-- ============================================================== -->
      <!-- end wrapper  -->
      <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- end main wrapper  -->
    <!-- ============================================================== -->
    <!-- Optional JavaScript -->
    <!-- jquery 3.3.1 -->
    <script src="/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <!-- bootstap bundle js -->
    <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <!-- slimscroll js -->
    <script src="/assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <!-- main js -->
    <script src="/assets/libs/js/main-js.js"></script>
    <!-- chart chartist js -->
    <script src="/assets/vendor/charts/chartist-bundle/chartist.min.js"></script>
    <!-- sparkline js -->
    <script src="/assets/vendor/charts/sparkline/jquery.sparkline.js"></script>
    <script src="/assets/libs/js/dashboard-ecommerce.js"></script>
  </body>
</html>
